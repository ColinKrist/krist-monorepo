---
import { Button } from "@/components/ui/button";
---

<section class="flex-grow flex items-center justify-center px-4 sm:px-6 lg:px-8">
  <div class="flex flex-col justify-center gap-7 cassette-border p-8 sm:p-12 lg:p-16 max-w-4xl w-full relative">
    <span></span>
    <span></span>
    <h1 class="text-6xl sm:text-8xl lg:text-9xl font-black leading-none font-display">
      Hello<span class="text-red-500">.</span>
    </h1>
    <p class="text-xl sm:text-2xl lg:text-3xl font-medium mb-8">
      Here you'll find plenty of my projects and experiences
      <br><br>
      I hope they inspire you
      <br><br>
      I'm a software engineer and I'm finding passion to build while juggling parenthood
    </p>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <Button variant="destructive" className="hover:text-red-500">About Me</Button>
      <Button variant="default" className="hover:text-red-500">My Projects</Button>
    </div>
  </div>
</section>

<style>
  .cassette-border {
    position: relative;
    border: 4px solid #fff;
    overflow: visible;
    /* Single control variable for timing */
    --pulse-speed: 1.5s;
    /* Calculated variables */
    --layers: 10;
    --pulse-duration: calc(var(--pulse-speed) * var(--layers));
    --pulse-scale: 1.5;
  }

  .cassette-border::before,
  .cassette-border::after,
  .cassette-border>span:nth-child(1),
  .cassette-border>span:nth-child(2) {
    content: '';
    position: absolute;
    inset: -4px;
    border: 4px solid #fff;
    /* Each layer starts at an evenly divided point in the animation */
    animation: ebb var(--pulse-duration) calc(var(--pulse-duration) / var(--layers) * (var(--index) - 1)) infinite;
    pointer-events: none;
  }

  /* Fix overflow issues */
  .cassette-border>span {
    position: absolute;

    inset: 0;
    --index: 3;
    pointer-events: none;
    z-index: -1;
  }

  .cassette-border>span:nth-child(2) {
    --index: 4;
    z-index: -1;
  }

  .cassette-border::before {
    --index: 1;
    z-index: -1;
  }

  .cassette-border::after {
    --index: 2;
    z-index: -1;
  }

  @keyframes ebb {
    0% {
      transform: scale(1);
      opacity: 0.5;
      filter: blur(0);
    }
    100% {
      transform: scale(var(--pulse-scale));
      opacity: 0;
      filter: blur(1px);
      border: 24px solid #fff;
    }
  }
</style>